<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_common_list_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/device_name_text"
        style="@style/CommonTextStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:textSize="16sp" />

    <View
        android:id="@+id/device_distance_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/device_distance_text"
        android:background="@drawable/distance_icon" />

    <TextView
        android:id="@+id/device_distance_text"
        style="@style/CommonTextStyle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/device_status_view"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/device_distance_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_device_status_view_background"
        android:gravity="center"
        android:text="@string/device_status_is_normal"
        android:textColor="@android:color/white" />

</RelativeLayout>